<header>
  <%= link_to 'HUNTER', :client_root, class: 'logo-mark' %>
  <%= content_tag(:span, flash.notice, class: 'notice') if flash.notice %>
  <%= content_tag(:span, flash.alert, class: 'alert') if flash.alert %>
  <%=
    if current_client
      link_to 'ログアウト', :client_session, method: :delete
    else
      link_to 'ログイン', :client_login
    end
  %>
  <%= link_to 'アカウント', :client_account if current_client %>
</header>